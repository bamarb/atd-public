   name Villisca-Corning
!
vlan 403
   name Corning-Lenox
!
interface Ethernet1
   description Villisca-Arista-B
   switchport trunk allowed vlan 402
   switchport mode trunk
!
interface Ethernet2
   description Corning-Client-1
!
interface Ethernet3
   description Lenox-Arista
   switchport trunk allowed vlan 403
   switchport mode trunk
!
interface Ethernet4
   description Corning-Calix
   no switchport
   ip address 10.7.19.7/24
!
interface Loopback0
   description Management Loopback
   ip address 10.11.1.40/32
   ip ospf area 0.0.0.0
!
interface Management1
   ip address 192.168.0.16/24
   no lldp transmit
   no lldp receive
!
interface Vlan102
   description Calix_Voice/Management
   ip address 10.143.0.1/16
   ip ospf area 0.0.0.0
!
interface Vlan402
   description Villisca-Corning
   ip address 10.111.20.2/30
   ip ospf network point-to-point
   ip ospf area 0.0.0.0
   pim ipv4 sparse-mode
!
interface Vlan403
   description Lenox-Corning
   ip address 10.111.40.1/30
   ip ospf network point-to-point
   ip ospf area 0.0.0.0
   pim ipv4 sparse-mode
!
interface Vxlan1
   vxlan source-interface Loopback0
   vxlan udp-port 4789
   vxlan vlan 9 vni 9
   vxlan vlan 14 vni 14
   vxlan vlan 225 vni 225
   vxlan vlan 250 vni 250
   vxlan vlan 1262 vni 1262
   vxlan vlan 1263 vni 1263
   vxlan vlan 3284 vni 3284
!
router bgp 65001
   router-id 10.11.1.40
   no bgp default ipv4-unicast
   neighbor HEADENDS peer group
   neighbor HEADENDS remote-as 65001
   neighbor HEADENDS update-source Loopback0
   neighbor HEADENDS send-community
   neighbor HEADENDS maximum-routes 12000
   neighbor 10.11.1.1 peer group HEADENDS
   neighbor 10.11.1.60 peer group HEADENDS
   !
   vlan 1262
      !! US_CELL_Corning_2
      rd auto
      route-target both 1262:1262
      redistribute learned
   !
   vlan 1263
      !! US_CELL_Corning_3
      rd auto
      route-target both 1263:1263
      redistribute learned
   !
   vlan 14
      !! FMTC_Data_Public
      rd auto
      route-target both 14:14
      redistribute learned
   !
   vlan 225
      !! FMTC_Guest
      rd auto
      route-target both 225:225
      redistribute learned
   !
   vlan 250
      !! IAI_Alarm
      rd auto
      route-target both 250:250
      redistribute learned
   !
   vlan 3284
      !! US_CELL_Corning_1
      rd auto
      route-target both 3284:3284
      redistribute learned
   !
   vlan 9
      !! ADT Alarm
      rd auto
      route-target both 9:9
      redistribute learned
   !
   address-family evpn
      neighbor HEADENDS activate
!
router multicast
   ipv4
      routing
!
router ospf 100
   router-id 10.11.1.40
   passive-interface default
   no passive interface Vlan402
   no passive interface Vlan403
   redistribute connected
   max-lsa 20000 40 ignore-time 10 ignore-count 4 reset-time 20
   log-adjacency-changes detail